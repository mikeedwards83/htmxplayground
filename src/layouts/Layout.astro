---
import Header from "../components/Header.astro";
import LeftMenu from "../components/LeftMenu.astro";
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html
  lang="en"
  class="h-full antialiased __variable_e66fe9 __variable_b436a8 dark"
  style="color-scheme: dark;"
>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Anek+Malayalam:wght@100&family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="flex min-h-full bg-white dark:bg-slate-900">
    <div class="flex w-full flex-col">
      <Header />
      <slot name="banner" />
      <div
        class="relative mx-auto flex w-full max-w-8xl flex-auto justify-center sm:px-2 lg:px-8 xl:px-12"
      >
        <LeftMenu />
        <div
          class="min-w-0 max-w-2xl flex-auto px-4 py-16 lg:max-w-none lg:pl-8 lg:pr-0 xl:px-16 simple-transition"
        >
          <slot />
        </div>
      </div>
    </div>
    <script src="../site.js"></script>
    <script src="https://unpkg.com/htmx.org@1.9.8"></script>
    <script src="https://kit.fontawesome.com/32e127886a.js" crossorigin="anonymous"></script>
    <script src="//unpkg.com/alpinejs" defer></script>
    <div id="notifications"></div>
  </body>
</html>
